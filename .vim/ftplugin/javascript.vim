set expandtab
set shiftwidth=2
set tabstop=2
" 79 is reasonable for JS, since I may want to print it
set columns=79
set textwidth=80
" The same colorscheme I'm using for IPython
colorscheme monokai
" Turn the syntax highlighting on
syn on
" Foldmethod indent works well for HTML
set foldmethod=indent
" I need this so the folds are open by default, 20 is probably good
set foldlevelstart=20

